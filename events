<script>
    $(document).ready(function(e){
        init(e);
        function renderAll (){
            var events = getEventsList().sortBy(function(o){ return o.start_date }).reverse();
            var categories = getStoreCategories();
            renderGeneral('#category_container', '#category_template', categories);
            renderGeneral('#mobile_cat_list', '#category_template2', categories);
            $('#mobile_cat_list').prepend('<option value="all" selected >All Categories</option>');
            show_cat_stores()
            var published_events = [];
            $.each( events , function( key, val ){
                today = new Date();
                webDate = new Date(val.show_on_web_date)
                if (today >= webDate) {
                    published_events.push(val)
                } 
            });
            if(published_events.length > 0){
                renderEvents("#promos_container","#promos_template", published_events);
            }
            else{
                $('#no_promos').show()
            }
            show_content();    
        }
        
		loadMallDataCached(renderAll); 
    })
</script>